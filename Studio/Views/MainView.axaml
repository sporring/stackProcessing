<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Studio.ViewModels"
             x:Class="Studio.Views.MainView"
             x:DataType="vm:MainWindowViewModel">

    <ScrollViewer Grid.Column="0">
    <ItemsControl ItemsSource="{Binding Editor.Templates}">
        <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
            <WrapPanel />
        </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>

        <ItemsControl.ItemTemplate>
        <DataTemplate>
            <Border Width="72" Height="72"
                    Margin="6"
                    CornerRadius="8"
                    Background="#060606ff"
                    BorderBrush="#b73333ff"
                    BorderThickness="1">
            <Grid>
                <!-- You can show an icon, or a simplified preview -->
                <TextBlock Text="{Binding Title}"
                        TextWrapping="Wrap"
                        FontSize="10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            </Grid>
            </Border>
        </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
    </ScrollViewer>

</UserControl>