<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
    </PropertyGroup>

    <PropertyGroup>
        <SigFile>$(MSBuildThisFileDirectory)StackProcessing.fsi</SigFile>
    </PropertyGroup>
 
    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <DefineConstants>TRACE</DefineConstants>
        <PlatformTarget>AnyCPU</PlatformTarget>
        <OtherFlags>--sig:"$(SigFile)"</OtherFlags>
    </PropertyGroup>
<!--
    <Target Name="CleanTextFile" AfterTargets="Build">
        <Exec Command="grep -v '^[[:space:]]*$' '$(SigFile)' &gt; '$(SigFile).tmp' &amp;&amp; mv '$(SigFile).tmp' '$(SigFile)'"/>
    </Target>
-->

    <!-- We want to copy the Managed library regardless of platform -->
    <ItemGroup>
      <Reference Include="SimpleITKCSharp">
      <HintPath>../../lib/SimpleITKCSharpManaged.dll</HintPath>
      <Private>true</Private>
      </Reference>
    </ItemGroup>

    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
      <None Include="../../lib/SimpleITKCSharpNative.dll">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        <TargetPath>libSimpleITKCSharpNative.dll</TargetPath>
      </None>
    </ItemGroup>
    
    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
      <None Include="../../lib/libSimpleITKCSharpNative.so"
        CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>

    <ItemGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
      <None Include="../../lib/libSimpleITKCSharpNative.dylib"
        CopyToOutputDirectory="PreserveNewest" />
    </ItemGroup>
    
    <ItemGroup>
        <PackageReference Include="DIKU.Graph" Version="1.0.0" />
        <!-- Reference the internal library -->
        <ProjectReference Include="../Image/Image.fsproj" />
        <ProjectReference Include="../Image/Image.fsproj" />
        <ProjectReference Include="../IRefCounting/IRefCounting.fsproj" />
        <ProjectReference Include="../SlimPipeline/SlimPipeline.fsproj" />
<!--
        <ProjectReference Include="../../diku-graph/graph/graph.fsproj" />
-->
    </ItemGroup>

    <ItemGroup>
        <Compile Include="TinyLinAlg.fs" />
        <Compile Include="StackCore.fs" />
        <Compile Include="StackIO.fs" />
        <Compile Include="StackImageFunctions.fs" />
        <Compile Include="ChunkedAffineResampler.fs" />
        <Compile Include="StackProcessing.fs" />
    </ItemGroup>

</Project>
